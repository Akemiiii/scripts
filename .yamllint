---
extends: default
rules:
  line-length:
    max: 160
  indentation:
    indent-sequences: whatever

  # Allows aligning subsequent lines with [] sequences
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: -1
  commas:
    max-spaces-after: -1
  # Allows aligning key value pairs
  colons:
    max-spaces-after: -1

  # don't warn about using yes/no etc.
  truthy: disable

